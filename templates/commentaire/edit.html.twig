{% extends 'base.html.twig' %}

{% block title %}Modifier un commentaire{% endblock %}

{% block body %}
    <div class="container commentcontent">
        <div class="row">
            <h1>Modifier un commentaire</h1>

            <form action="{{ path('figure_edit_comment', {'id': commentaire.id}) }}" method="post">
                {{ form_start(form) }}

                <span style="display: none">{{ form_label(form.content) }}</span>
                <div class="mt-2">{{ form_widget(form.content) }}</div>
                <div style="display: none">{{ form_row(form.figure) }}</div>
                <button type="submit" class="mt-3 btn-custom">Enregistrer les modifications</button>
                {{ form_end(form) }}
            </form>

            <a href="{{ path('figure_show', {'id': commentaire.getFigure().id}) }}" class="mt-3">Retour Ã  la figure</a>
        </div>
    </div>
{% endblock %}
