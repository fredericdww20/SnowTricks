                     class="mb-2">

                </div>

                <button type="button" class="btn btn-outline-secondary mb-2 add_item_link" data-collection-holder-class="image">Ajouter une image</button>

                <div class="tags" data-index="{{ form.videos|length > 0 ? form.videos|last.vars.name + 1 : 0 }}"
                     data-prototype="{{ form_widget(form.videos.vars.prototype)|e('html_attr') }}"
                     class="mb-2 ">
                </div>

                <button type="button" class="btn btn-outline-secondary mb-2 add_item_link" data-collection-holder-class="tags">Ajouter une vidéo
