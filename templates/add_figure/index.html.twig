{% extends 'base.html.twig' %}

{% block title %}Ajouter une figure{% endblock %}

{% block body %}

    <div class="most-popular">
        <div class="row">
            <div class="col-lg-12">
                <div class="heading-section">
                    <h4><em>Découvrez</em> les figures</h4>
                </div>

                <div class="row">
                    {{ form_start(form) }}

                    <div data-controller="collection"
                         data-collection-index-value="{{ form.videos|length > 0 ? form.videos|last.vars.name + 1 : 0 }}"
                         data-collection-prototype-value="{{ form_widget(form.videos.vars.prototype)|e('html_attr') }}">

                        <ul data-collection-target="collectionContainer">
                            {% for videoForm in form.videos %}
                                <li>{{ form_row(videoForm.link) }}</li>
                            {% endfor %}
                        </ul>

                        <button type="button" data-collection-target="addButton" data-action="click->collection#addCollectionElement">
                            Ajouter une vidéo
                        </button>
                    </div>
                    {{ form_end(form) }}

                </div>
            </div>
        </div>
    </div>
    </div>





{% endblock %}
