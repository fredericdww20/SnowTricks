{% extends 'base.html.twig' %}

{% block title %}Ajouter une figure{% endblock %}

{% block body %}

    <div class="most-popular">
        <div class="row">
            <div class="col-lg-12">
                <div class="heading-section">
                    <h4><em>Découvrez</em> les figures</h4>
                </div>

                <div class="row">
                    {{ form_start(form) }}

                    {{ form_row(form.name) }}
                    {{ form_row(form.chapo) }}
                    {{ form_row(form.description) }}
                    {{ form_row(form.categories) }}

                    <ul class="image"
                        data-index="{{ form.image|length > 0 ? form.image|last.vars.name + 1 : 0 }}"
                        data-prototype="{{ form_widget(form.image.vars.prototype)|e('html_attr') }}"
                    ></ul>

                    <button type="button" class="add_item_link" data-collection-holder-class="image">Ajouter une image</button>


                    <ul class="tags"
                        data-index="{{ form.videos|length > 0 ? form.video|last.vars.name + 1 : 0 }}"
                        data-prototype="{{ form_widget(form.videos.vars.prototype)|e('html_attr') }}"
                    ></ul>

                    <button type="button" class="add_item_link" data-collection-holder-class="tags">Ajouter une vidéo</button>


                    <input type="submit" value="Soumettre" />
                    {{ form_end(form) }}

                </div>
            </div>
        </div>
    </div>
    </div>




{% endblock %}
