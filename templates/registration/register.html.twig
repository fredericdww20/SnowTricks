{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    {{ form_errors(registrationForm) }}

    <div class="container">
        <div class="row">
            <div class="mb-5 mt-3 mx-auto col-10 col-md-8 col-lg-6">
                <div class="imagecustom">
                    <img src="./images/logo_register.png" alt="Description of the image">
                </div>
                <h1 class="text-white mt-4 text-center h3 mb-3 font-weight-normal">Crée votre compte</h1>
                {{ form_start(registrationForm) }}

                {{ form_widget(registrationForm.username, {
                    attr: {'class': 'form-control text-white', 'placeholder': 'Nom utilisateur'}
                }) }}

                {{ form_widget(registrationForm.email, {
                    attr: {'class': 'mt-3 form-control', 'placeholder': 'Votre email'}
                }) }}

                {{ form_widget(registrationForm.plainPassword, {
                    attr: {'class': 'mt-3 form-control', 'placeholder': 'Mot de passe'}
                }) }}
                {{ form_widget(registrationForm.agreeTerms, {
                    attr: {'class': 'mt-3'}
                } ) }}
                <span class="text-white">J'accepte les</span> <span class="text-white" href="#"> conditions générales</span>

                <div class="text-center">
                    <button type="submit" class="mt-5 btn btn-lg btn-custom">Enregister</button>
                </div>
                {{ form_end(registrationForm) }}

            </div>
        </div>
    </div>
{% endblock %}
